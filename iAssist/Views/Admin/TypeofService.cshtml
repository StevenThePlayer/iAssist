@model IEnumerable<iAssist.Models.ServiceViewModel>

@{
    ViewBag.Title = "TypeofService";
    var id = ViewBag.JobId;
}

<div class="container py-3">
    <div class="card">
        <div class="card-header" style="background-color: #e65c00;">
            <h5 style="color:white;">Type of Service</h5>
        </div>
        <div class="card-body">
            <p>
                @Html.ActionLink("Create New", "CreateService", new { jobid = id })
            </p>
            <div style="overflow-x:auto;">
                <table class="table table-striped">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Skillname)
                        </th>
                        <th></th>
                    </tr>
                    @if (Model.Any() == false)
                    {
                        <tr>
                            <td>
                                <h5>There is no Service under this Job</h5>
                            </td>
                        </tr>
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Skillname)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "EditService", new { id = item.Id, job = ViewBag.JobId }) |
                                @Html.ActionLink("Delete", "DeleteService", new { id = item.Id, job = ViewBag.JobId })
                            </td>
                        </tr>
                    }

                </table>
            </div>
            @Html.ActionLink("Back to List", "ListJobCategory", new { search = "" })
        </div>
    </div>
</div>