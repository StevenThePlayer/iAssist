@model IEnumerable<iAssist.Models.Job>

@{
    ViewBag.Title = "ListJobCategory";
}
<div class="container py-3">
    <h3>Job Category</h3>
    <hr />
    <div class="card">
        <div class="card-header" style="background-color: #e65c00;">
            <h5 style="color:white;">Job List</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("ListJobCategory", "Admin", FormMethod.Get, new { @class = "navbar-form navbar-left" }))
            {
                <table align="right">
                    <tr>
                        <td>
                            <div class="form-group me-2">
                                @Html.TextBox("Search", null, new { @class = "form-control", @placeholder = "Search Products" })
                            </div>
                        </td>
                        <td><button type="submit" class="btn btn-primary" style="background-color: #e65c00; border: none;">Search</button></td>
                    </tr>
                </table>
            }
            <p style="margin-top: 10px;">
                @Html.ActionLink("Create Job Category", "CreateJobCategory")
            </p>
            <div style="overflow-x:auto;">
                <table class="table table-striped">
                    <tr class="text-center">
                        <th>
                            @Html.DisplayNameFor(model => model.JobName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.JobDescription)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Created_At)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Updated_At)
                        </th>
                        <th>Action</th>
                    </tr>
                    @if (Model.Any() == false)
                    {
                        <tr>
                            <td>
                                <p>There is no Job Created;</p>
                            </td>
                        </tr>
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.JobName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.JobDescription)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Created_At)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Updated_At)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "EditJobCategory", new { id = item.Id }) |
                                @Html.ActionLink("Types of Service", "TypeofService", new { id = item.Id }) |
                                @Html.ActionLink("Details", "DetailsJobCategory", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "DeleteJobCategory", new { id = item.Id })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
