}

<div class="container py-5">
    <h2>View My Submitted Form</h2>
    <hr />
    <div>
        <dl class="dl-horizontal">
            <dd>
                @if (Model.ProfilePicture == null)
                {
                    <img class="profile-photo" src="~/image/defaultprofilepic.jpg" style="height:150px; width:150px;" />
                }
                else
                {
                    <img class="profile-photo" src="@Url.Content("~/image/"+Model.ProfilePicture)" style="height:150px; width:150px;" />
                }
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Firstname)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Firstname)
