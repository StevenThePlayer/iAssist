                @Html.DisplayFor(model => model.Created_at)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Updated_at)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Updated_at)
            </dd>
            <dd>
                <p><b>Worker Skills / Service</b></p>
            </dd>
            <dd>
                @foreach (var items in Model.workerskills)
                {
                    <p>@items.Skillname</p>
                }
            </dd>
            <dd>
                <p><b>Worker Image File</b></p>
            </dd>
            <dd>
                @foreach (var items in Model.SkilledWorkerImageFile)
                {
                    <img class="profile-photo" src="@Url.Content("~/image/RegisterSkilledFile/" +items.FileName)" style=padding:5px />
                }
            </dd>
        </dl>
    </div>
    <p>
        @Html.ActionLink("Edit", "EditRegisterSkilledWorker", new { id = Model.JobId }) |
        @Html.ActionLink("Back", "Index", "Home")
    </p>

</div>