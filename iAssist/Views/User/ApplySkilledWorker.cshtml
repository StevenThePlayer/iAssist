@model iAssist.Models.SelectJobViewModel

@{
    ViewBag.Title = "ApplySkilledWorker";
}

<div class="container py-5">
    <h2>Apply as Skilled Worker in iAssist</h2>

    <p>
        There are few steps to be a skilled worker here in iAssist. First Select a Job Category you want to Apply. Then Just fill up the following form and
        submit images like valid id and certificate that will prove that you are a skilled worker
    </p>
    <p style="color: red;">@TempData["Error1"]</p>
    @using (Html.BeginForm("RegisterSkilledWorker", "User", FormMethod.Get, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="form-group">
                    @Html.LabelFor(model => model.JobId, htmlAttributes: new { @class = "control-label", @style = " font-family:Arial; font-size:20px;" })
                    @Html.DropDownListFor(vm => vm.JobId, Model.JobList, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.JobId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group py-3">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Next" class="btn btn-default" style="background-color: #e65c00; border:none; color:white;" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back", "Index", "Home")
    </div>

</div>