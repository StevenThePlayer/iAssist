@model iAssist.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "| Reset password";
    ViewBag.Message = "Reset password";
    var data = TempData["Email"].ToString();
}

<main class="py-0">
    <div class="container-fluid py-5">
        <div class="row justify-content-evenly">
            <div class="col-lg-7">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">@ViewBag.Message</h3></div>
                    <div class="card-body">
                        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.Code)
                            <div class="form-floating mb-3">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @readonly = "readonly", @Value = data })
                                @Html.LabelFor(m => m.Email)
                            </div>
                            <div class="form-floating mb-3">

                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.LabelFor(m => m.Password)
                            </div>
                            <div class="form-floating mb-3">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                @Html.LabelFor(m => m.ConfirmPassword)
                            </div>
                            <div class="mt-4 mb-0">
                                <input type="submit" class="btn btn-primary btn-block" value="Reset" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
