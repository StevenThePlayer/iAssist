@if (User.IsInRole("Worker"))
{
    <hr />
    <h3 class="text-center"> Your Work Profile/s</h3>
    if (Model.check == 0)
    {
        <p style="text-align:right;">@Html.ActionLink("Apply Another Job", "ApplySkilledWorker", "User")</p>
    }
    else
    {
        <p style="text-align:right;">@Html.ActionLink("View Submitted Application Form", "ViewSubmittedWorker", "User")</p>
    }
        foreach (var i in Model.userworkdet)
        {
            <div class="card">
                <div class="card-header" style="background-color: #e65c00; color:#FFFFFF;">
                    Job Name: @i.jobname
                </div>
                <div class="card-body">
                    @Html.ActionLink("Edit", "EditRegisterSkilledWorker","User", new { id = i.JobId }, htmlAttributes: new { style = "text-align: right;" })
                    <h5 class="card-title">Job ID: @i.JobId</h5>
                    <h5 class="card-title">Job Name: @i.jobname</h5>
                    <p class="card-text">WorkAddress: @i.Address</p>
                    <p class="card-text">Worker Overview: @i.Overview</p>
                    <h5>Skills / Service</h5>
                    @foreach (var skill in Model.workerskills)
                    {
                        if (skill.Jobid == i.JobId)
                        {
                            <p>@skill.Skillname</p>
                        }
                    }
                    <h5>Rate and Feedback</h5>
                    @if (Model.rateandFeedbacks.Any() == false)
                    {
                        <p>There is no Rate or Feedback</p>
                    }
                    @foreach (var file in Model.rateandFeedbacks)
                    {
                        if (file.WorkerId == i.workid && file.jobid == i.JobId)
                        {
                            <div class="row">
                                <div class="col-md-10">
                                    <p>
                                        @file.Username
                                        @for (var c = 0; c < file.Rate; c++)
                                        {<i class="text-warning fa fa-star"></i>}
                                        @for (var c = file.Rate + 1; c <= 5; c++)
                                        {<i class="text-warning far fa-star"></i>}
                                    </p>
                                    <div class="clearfix"></div>
                                    <p>@file.Feedback</p>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        }
}









